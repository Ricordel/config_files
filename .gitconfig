    email = yoann.ricordel@qarnot-computing.com
[core]
	editor = vim
	mergetool = vimdiff

[alias]
	ci = commit
	st = status
	stu = status -uno
	ch = checkout
    co = checkout
	br = branch
    aa = add -A
    au = add -u
    ff = merge --ff-only
    noff = merge --no-ff
    cp = cherry-pick
[color]
	ui = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""
[difftool]
	prompt = false
	trustExitCode = true
[merge]
    tool = nvimdiff
[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
    prompt = false
	trustExitCode = true
[push]
	default = simple
[branch]
	autosetuprebase = always
